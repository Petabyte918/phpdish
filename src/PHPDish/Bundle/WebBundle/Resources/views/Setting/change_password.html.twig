{% extends 'PHPDishWebBundle:Common:setting_layout.html.twig' %}

{% block title %} {{ 'setting.change_password'|trans }} {% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/setting.js') }}"></script>
{% endblock %}

{% block setting_content %}

    <div class="panel panel-u">
        <div class="panel-heading">{{ 'setting.change_password'|trans }}</div>
        <div class="panel-body">
            {{ form_start(form, { 'action': path('setting_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            <div class="form-group">
                {{ form_label(form.current_password) }}
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'setting.change_password.form.current_password'|trans}}) }}
                {{ form_errors(form.current_password) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'setting.change_password.form.new_password'|trans}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'setting.change_password.form.repeat_password'|trans}, 'required': false}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn u-btn-primary submit-btn"><i class="if i-publish"></i> {{ 'setting.change_password.form.edit'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}