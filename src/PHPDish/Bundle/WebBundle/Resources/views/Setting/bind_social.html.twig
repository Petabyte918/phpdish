{% extends 'PHPDishWebBundle:Common:setting_layout.html.twig' %}

{% block title %} {{ 'setting.social_account.social_account'|trans }} {% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/setting.js') }}"></script>
{% endblock %}

{% block setting_content %}

    <div class="panel panel-u">
        <div class="panel-heading"> {{ 'setting.social_account.social_account'|trans }} </div>
        <ul class="list-group social-connection">
            <li class="list-group-item">
                <span class="if i-qq"></span>

                {% if app.user.qqId %}
                    {{ 'setting.social_account.have_been_bound'|trans }} <i class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('qq') }}">{{ 'setting.social_account.bind_qq'|trans }}</a>
                {% endif %}
            </li>
            <li class="list-group-item">
                <span class="if i-weibo"></span>

                {% if app.user.weiboId %}
                    {{ 'setting.social_account.have_been_bound'|trans }} <i class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('weibo') }}">{{ 'setting.social_account.bind_weibo'|trans }}</a>
                {% endif %}
            </li>
            <li class="list-group-item">
                <span class="if i-github"></span>

                {% if app.user.githubId %}
                    {{ 'setting.social_account.have_been_bound'|trans }} <i  class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('github') }}">{{ 'setting.social_account.bind_github'|trans }}</a>
                {% endif %}
            </li>
        </ul>
    </div>

{% endblock %}