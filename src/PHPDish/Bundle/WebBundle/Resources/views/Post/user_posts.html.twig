{% extends 'PHPDishWebBundle:User:view_common.html.twig' %}

{% set tab = 'post' %}

{% if posts.count %}
    {% block entry_meta %}
        <span>{{ 'post.total_publish_posts'|trans({'%count%': posts.count}) }}</span>
    {% endblock %}
{% endif %}

{% block user_content %}
    {% if posts.count %}
        {% include 'PHPDishWebBundle:Post:_post_list.html.twig' %}
        {% if posts.haveToPaginate %}
        <footer class="panel-footer">
            {{ pagerfanta(posts, 'twitter_bootstrap3') }}
        </footer>
        {% endif %}
    {% else %}
        <div class="empty-data">
            <p><i class="if i-post-o"></i> {{  'post.no_posts_yet'|trans }}</p>
        </div>
    {% endif %}
{% endblock %}