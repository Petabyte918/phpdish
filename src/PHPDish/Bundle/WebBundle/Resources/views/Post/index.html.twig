{% extends 'PHPDishWebBundle::layout.html.twig' %}

{% block title %} {{ 'ui.category'|trans }} {% endblock %}

{% block content %}
<div class="container" role="main">
    <div class="row">
        <div class="col-lg-9 col-md-9">
            <div class="panel panel-u">
                <div class="panel-heading"><i class="fa fa-file-text-o"></i> {{ 'post.latest_post'|trans }}</div>
                {% include 'PHPDishWebBundle:Post:_post_list.html.twig' %}
                {% if posts.haveToPaginate %}
                <footer class="panel-footer">
                    {% from 'PHPDishWebBundle:Macros:paginator.html.twig' import paginator %}
                    {{ paginator(posts) }}
                </footer>
                {% endif %}
            </div>
        </div>
        <div class="col-lg-3 col-md-3">
            {% include 'PHPDishWebBundle:Post:_latest_posts.html.twig' with {'limit': 10} %}
            {#{% include 'PHPDishWebBundle:User:_latest_register_user.html.twig' with {'limit': 10} %}#}
            {% include 'PHPDishWebBundle:Common:_friend_community.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}